@model IEnumerable<PNTS.Models.Course>


@{
    ViewBag.Title = "Home Page";
}

    <section class="hero-section set-bg">
        <section class="hero">

            <div class="hero-inner">
                <br><br>
                <h1><b>Pakistan National Training Services<b></h1>
                <h3>We deliver quality courses, Secure your seats now!</h3>
                <h3>View Course Catalogue</h3>
                <a class=btn href="@Url.Action("Index", "Courses")#features">Course Catalogue</a>

                <br>
                <h2>OR</h2>
                <h3>Book a Course you are looking for!</h3>
                <form class="card card-sm">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <!--end of col-->
                        <div class="col">
                            <input class="form-control form-control-borderless" type="search" placeholder="Search Courses by name here..">
                           
                        </div>
                        <!--end of col-->
                        <div class="col-auto">
                            <a href="https://example.com/" class="btn">Search</a>
                        </div>
                        <!--end of col-->
                    </div>
                </form>
            </div>
        </section>

 

        <section class="all-courses" id="all-courses">

            <div class="container">
                <div class="section-title mb-0">
                    <br><br><br><br><br><h2 style="text-align:center; font-size:40px">Course Catalogue - All Courses</h2>
                    <br><p style="text-align:center; font-size:20px;">
                        Find your perfect university program with our course guides – covering entry requirements, specializations, career prospects and more.
                        Click on the listings below to find out about available programs in your subject of interest.
                    </p><br>
                </div>
            </div>



            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="column">
                        <div class="container page-wrapper">
                            <div class="page-inner">
                                <div class="row">
                                    <div class="el-wrapper">
                                        <div class="box-up">
                                            <img class="img" src="images/@(item.Title).jpg">
                                            <div class="img-info">
                                                <div class="info-inner">
                                                    <span class="p-name">@Html.DisplayFor(modelItem => item.Title)</span>
                                                    <span class="p-company">Certification Training</span>
                                                </div>
                                                <div class="a-size">Delivery Method : <span class="size"> @Html.DisplayFor(modelItem => item.DeliveryMethod)</span></div>
                                            </div>
                                        </div>

                                        <div class="box-down">
                                            <div class="h-bg">
                                                <div class="h-bg-inner"></div>
                                            </div>

                                            <a class="cart" href="@Url.Action(@item.Title, "Home")#features">
                                                <span class="price">PKR @Html.DisplayFor(modelItem => item.Price)</span>
                                                <span class="add-to-cart">
                                                    <span class="txt">View Course</span>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
        </section>

